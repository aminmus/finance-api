{
    "name": "finance-api",
    "version": "0.1.0",
    "description": "API for my asset tracking finance application",
    "license": "UNLICENSED",
    "author": "Amin Mushehid (https://github.com/aminmus)",
    "scripts": {
        "format": "npx prettier --write './**/*.{ts,md}'",
        "dev": "ts-node-dev --transpile-only ./api/app.ts",
        "dev:typecheck": "tsc --noEmit --watch",
        "nexus:reflect": "ts-node --transpile-only api/schema.ts",
        "build": "nexus build",
        "start": "node .nexus/build/api",
        "docker": "docker-compose up -d && docker-compose logs -f"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
    },
    "devDependencies": {
        "@prisma/cli": "^2.11.0",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.9",
        "@types/jsonwebtoken": "^8.5.0",
        "prettier": "^2.0.5",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@nexus/schema": "^0.17.0",
        "@prisma/client": "^2.10.0",
        "@types/node": "^14.14.7",
        "apollo-server-express": "^2.18.2",
        "bcrypt": "^5.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "graphql": "^15.4.0",
        "graphql-middleware": "^4.0.2",
        "graphql-scalars": "^1.4.1",
        "graphql-shield": "^7.3.8",
        "jsonwebtoken": "^8.5.1",
        "nexus-plugin-prisma": "^0.23.1"
    }
}
