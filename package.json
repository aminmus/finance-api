{
    "name": "finance-api",
    "version": "0.1.0",
    "description": "API for my asset tracking finance application",
    "license": "UNLICENSED",
    "author": "Amin Mushehid (https://github.com/aminmus)",
    "scripts": {
        "format": "npx prettier --write './**/*.{ts,md}'",
        "dev": "ts-node-dev --transpile-only ./your/main/module",
        "dev:typecheck": "tsc --noEmit --watch",
        "nexus:reflect": "ts-node --transpile-only src/schema",
        "build": "nexus build",
        "start": "node .nexus/build/api",
        "docker": "docker-compose up -d && docker-compose logs -f"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/jsonwebtoken": "^8.5.0",
        "prettier": "^2.0.5",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@nexus/schema": "^0.16.0",
        "@types/node": "^14.6.0",
        "bcrypt": "^5.0.0",
        "dotenv": "^8.2.0",
        "graphql": "^15.3.0",
        "jsonwebtoken": "^8.5.1",
        "nexus-plugin-prisma": "^0.18.2",
        "nexus-plugin-shield": "^0.2.0"
    }
}
