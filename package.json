{
    "name": "finance-api",
    "version": "0.1.0",
    "description": "API for my asset tracking finance application",
    "license": "UNLICENSED",
    "author": "Amin Mushehid (https://github.com/aminmus)",
    "scripts": {
        "format": "npx prettier --write './**/*.{ts,md}'",
        "dev": "ts-node-dev --transpile-only ./api/app.ts",
        "dev:typecheck": "tsc --noEmit --watch",
        "nexus:reflect": "ts-node --transpile-only api/schema.ts",
        "start": "node .nexus/build/api",
        "docker": "docker-compose up -d && docker-compose logs -f",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.6",
        "@typescript-eslint/eslint-plugin": "5.9",
        "@typescript-eslint/parser": "5.9",
        "eslint": "^8.6.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-plugin-import": "^2.22.1",
        "prettier": "^2.2.1",
        "prisma": "^3.7.0",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "@prisma/client": "^3.7.0",
        "@types/node": "^16.11.19",
        "apollo-server-express": "^3.6.1",
        "bcrypt": "^5.0.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.2",
        "graphql": "^15.8.0",
        "graphql-middleware": "^6.1.13",
        "graphql-scalars": "^1.14.1",
        "graphql-shield": "^7.5.0",
        "jsonwebtoken": "^8.5.1",
        "nexus": "^1.1.0",
        "nexus-prisma": "^0.35.0"
    }
}
