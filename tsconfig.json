{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "rootDir": "api",
    "noEmit": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ],
    "typeRoots": [
      "node_modules/@types",
      "types",
      "api"
    ],
    "esModuleInterop": true
  },
  "include": [
    "types.d.ts",
    "api", 
    "nexus-typegen.ts"
  ]
}